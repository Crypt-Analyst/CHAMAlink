# Render.com Build Configuration
# Copy these environment variables to your Render.com service

# Python Configuration
PYTHON_VERSION=3.11.9

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=production

# Database
DATABASE_URL=your_postgresql_url_from_render

# Security
SECRET_KEY=your_secure_secret_key_here
WTF_CSRF_ENABLED=true

# Email Configuration (update with your Gmail App Password)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_16_character_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# Legacy email vars (for compatibility)
EMAIL_PASSWORD=your_16_character_app_password
EMAIL_USERNAME=your_email@gmail.com
EMAIL_SERVER=smtp.gmail.com
EMAIL_PORT=587
BASE_URL=https://your-app-name.onrender.com

# File Uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Production specific
DEBUG=false
TESTING=false

# M-Pesa (update with production values when ready)
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_BUSINESS_SHORT_CODE=your_business_short_code
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=https://your-app-name.onrender.com/api/mpesa/callback
MPESA_ENVIRONMENT=sandbox
